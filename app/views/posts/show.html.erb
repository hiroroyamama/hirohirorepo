<div class="container">
  <div class="post-show-item">
    <%= @post.content %>
    <%= @id %>
    <div class="post-time">
      <%= @post.created_at %>
    </div>  
  </div>
  <%= form_tag("/posts/took") do %>
    <textarea name="lcontent"></textarea>
    <input type="submit" value="投稿"> 
  <% end %>  
  <% @lposts.each do |lpost| %>
    <div class="posts-coment-item">
      <%= lpost.lcontent %>
    </div>
  <% end %> 
</div>  
